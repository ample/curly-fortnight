<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title><%= current_object.title %></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <%= stylesheet_link_tag "site" %>
  <%= javascript_include_tag "site" %>
</head>
<body>
  <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">
      <%= link_to 'Brand', '/' %>
    </h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <% top_nav.each do |page| %>
      <a class="p-2 text-dark" href="<%= page.path %>"><%= page.nav_name %></a>
      <% end %>
    </nav>
    <a class="btn btn-outline-primary" href="#">Sign up</a>
  </header>

  <main role="main" class="container">
    <%= yield %>
  </main>
</body>
</html>
